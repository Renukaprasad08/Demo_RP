@{
    ViewData["Title"] = "Home";
}
<h1>Welcome to the Demo ASP.NET Core app</h1>

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <p>You are signed in as <strong>@User.Identity.Name</strong>.</p>
}
else
{
    <p>You are not signed in. <a href="/Account/Login">Sign in</a> with demo/Password123!</p>
}
